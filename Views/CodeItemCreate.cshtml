@model Nop.Plugin.Misc.DigitalCodes.Models.CodeItem.CodeItemModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.PageTitle = "Kod Kalemi Olu≈ütur";
    NopHtml.SetActiveMenuItemSystemName("DigitalCodes.CodeItems");
}

<form asp-area="Admin" asp-controller="DigitalCodes" asp-action="CodeItemCreate" method="post">
    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-header">
                            @T("Admin.Common.Info")
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="All"></div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="CodePoolName"/>
                                </div>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="CodePoolName" readonly />
                                    <input type="hidden" asp-for="CodePoolId" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="Code"/>
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="Code"/>
                                    <span asp-validation-for="Code"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="Pin"/>
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="Pin"/>
                                    <span asp-validation-for="Pin"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="Serial"/>
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="Serial"/>
                                    <span asp-validation-for="Serial"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="ExpireOnUtc"/>
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="ExpireOnUtc"/>
                                    <span asp-validation-for="ExpireOnUtc"></span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" name="save" class="btn btn-primary">
                                <i class="far fa-floppy-disk"></i>
                                @T("Admin.Common.Save")
                            </button>
                            <a asp-action="CodeItems" class="btn btn-default">@T("Admin.Common.BackToList")</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>